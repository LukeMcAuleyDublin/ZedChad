  "buffer_font_size": 18,
  // Vim
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "highlight_on_yank_duration": 200
  },
  "language_overrides": {
    "Ruby": {
      "language_server": {
        "name": "solargraph",
        "command": "/Users/lukemcauley/.rbenv/versions/3.1.5/bin/solargraph",
        "args": ["stdio"]
      }
    }
  }
