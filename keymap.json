// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Editor && !menu",
    "bindings": {
      "tab": "file_finder::SelectPrev"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space f w": "pane::DeploySearch",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-a": "editor::SelectAll",
      "shift-ctrl-h": "pane::SplitLeft",
      "shift-ctrl-j": "pane::SplitDown",
      "shift-ctrl-k": "pane::SplitUp",
      "shift-ctrl-l": "pane::SplitRight",
      "ctrl-w-q": "pane::CloseActiveItem",
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePrevItem",
      "space x": "pane::CloseActiveItem"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space /": "editor::ToggleComments"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "shift": "file_finder::SelectPrev"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "tab": "pane::GoBack",
      "shift-tab": "pane::GoForward"
    }
  },
  {
    "context": "KeyContextView",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  }
]
